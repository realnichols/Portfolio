<h1>YOU MESSed UP YOUR SHIZ</h1>

<%= form_for(@portfolio_item) do |f| %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  
   <div class="field">
    <%= f.label :subtitle %>
    <%= f.text_area :subtitle %>
  </div>

  <div class="field">
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
  
  <%= link_to 'Delete Item', portfolio_path(@portfolio_item),  method: :delete, data: { confirm: 'are you sure'} %>
  
  <% end %>