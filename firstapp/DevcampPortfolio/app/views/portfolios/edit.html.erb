<h1>YOU MESSed UP YOUR SHIZ</h1>

<%= form_for(@portfolio_item) do |f| %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  
   <div class="field">
    <%= f.label :subtitle %>
    <%= f.text_area :subtitle %>
  </div>

  <div class="field">
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
  
<h2>Destroy?</h2>
<%= link_to 'Destroy', @portfolio_item, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>
